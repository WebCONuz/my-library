<!-- REGISTER SECTION  -->
<section id="addbook">
  <div class="cover py-4">
    <div class="container py-4">
      <div class="row mb-3">
        <div class="col-lg-12 text-center title-text">
          <h2 class="title-h2 text-light">E'lonni yangilash</h2>
        </div>
      </div>
      <div class="row">
        <form action="/news/add" method="POST" enctype="multipart/form-data">
          <div class="col-md-6 offset-md-3">
            <div class="form-area d-flex flex-column">
              <label for="title" class="form-label text-light">E'lon Sarlavhasi</label>
              <input
                type="text"
                id="title"
                class="mb-4 form-control"
                name="title"
              />
              <label for="newsImg" class="form-label text-light">E'lon Rasmi</label>
              <input
                type="file"
                id="newsImg"
                class="mb-4 form-control"
                name="newsImg"
              />
              <label for="newsText" class="form-label text-light">E'lon matni</label>
              <textarea
                class="form-control mb-4"
                id="newsText"
                rows="3"
                name="newsText"
              ></textarea>
              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success">Yangilash</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>