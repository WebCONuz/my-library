<!-- REGISTER SECTION  -->
<section id="addbook">
  <div class="cover py-5">
    <div class="container py-4">
      <div class="row mb-3">
        <div class="col-lg-12 text-center title-text">
          <h2 class="title-h2 text-light">Tizimga yangi admin qo'shish</h2>
        </div>
      </div>
      <div class="row">
        <form action="/admin/signup" method="POST">
          <div class="col-md-6 offset-md-3">
            {{#if registerError}}
              <div
                class="alert alert-danger"
                role="alert"
              >{{registerError}}</div>
            {{/if}}
            <div class="form-area d-flex flex-column">
              <label
                for="userName"
                class="form-label text-light"
              >Ism-sharifi</label>
              <input
                type="text"
                id="userName"
                class="mb-4 form-control"
                name="name"
              />
              <label for="userEmail" class="form-label text-light">Email</label>
              <input
                type="email"
                id="userEmail"
                class="mb-4 form-control"
                name="email"
              />
              <label
                for="userPassword"
                class="form-label text-light"
              >Parol</label>
              <input
                type="password"
                id="userPassword"
                class="mb-4 form-control"
                name="password"
              />
              <label for="userPassword2" class="form-label text-light">Parol
                (qayta)</label>
              <input
                type="password"
                id="userPassword2"
                class="mb-4 form-control"
                name="password2"
              />
              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success">Adminni yaratish</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>