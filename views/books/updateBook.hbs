<!-- UPDATE BOOK SECTION  -->
<section id="addbook" class="">
  <div class="cover py-4">
    <div class="container py-4">
      <div class="row mb-3">
        <div class="col-lg-12 text-center title-text">
          <h2 class="title-h2 text-light">Kitobni yangilash</h2>
        </div>
      </div>
      <div class="row">
        <form
          action="/books/{{id}}/edit"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="col-md-6 offset-md-3">
            <div class="form-area d-flex flex-column">

              <label for="title" class="form-label text-light">Kitob Nomi</label>
              <input
                type="text"
                id="title"
                class="mb-4 form-control"
                name="title"
                value="{{book.dataValues.title}}"
              />
              <label for="author" class="form-label text-light">Kitob Mualllifi</label>
              <input
                type="text"
                id="author"
                class="mb-4 form-control"
                name="author"
                value="{{book.dataValues.author}}"
              />

              <label for="category" class="form-label text-light">Kitob
                Kategoriyasi</label>
              <select class="mb-4 form-select" id="category" name="category">
                <option selected>...</option>
                <option value="Dasturlash">Dasturlash</option>
                <option value="Ijtimoiy-gumanitar">Ijtimoiy-gumanitar</option>
                <option value="Tabiiy">Tabiiy</option>
                <option value="Badiiy">Badiiy</option>
                <option value="Ilmiy maqolalar">Ilmiy maqolalar</option>
                <option value="Darslik">Darslik</option>
                <option value="AKT">AKT</option>
              </select>

              <label for="bookImg" class="form-label text-light">Kitob Rasmi</label>
              <input
                type="file"
                id="bookImg"
                class="mb-4 form-control"
                name="bookImg"
              />

              <label for="bookFile" class="form-label text-light">Kurs Fayli</label>
              <input
                type="file"
                id="bookFile"
                class="mb-4 form-control"
                name="bookFile"
              />

              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success">Kitobni yangilash</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>